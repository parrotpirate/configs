# Run scripting utility from /private/etc/sudoers.d/yabai
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

#allow yabai to control windows (default: float)
yabai -m config layout float

# fade nonactive window
yabai -m config window_opacity on
yabai -m config normal_window_opacity 0.9
yabai -m config active_window_opacity 1.0

# add border to active window
yabai -m config window_border on
yabai -m config window_border_blur on
yabai -m config window_border_hidpi on
yabai -m config window_border_width 6
yabai -m config active_window_border_color 0xffee0000
yabai -m config normal_window_border_color 0x00555555

yabai -m window --toggle border
yabai -m rule --add app=Terminal border=off
